@model RegisterViewModel

<form asp-controller="Auth" asp-action="Register" method="post">
    <div class="header">Sign Up</div>
    <div class="block">
        <label>Username</label>
        <input asp-for="Username" class="input" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="block">
        <label>Password</label>
        <input asp-for="Password" class="input" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="block">
        <label>Confirm password</label>
        <input asp-for="ConfirmPassword" class="input" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="block">
        <label>First Name</label>
        <input asp-for="FirstName" class="input" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="block">
        <label>Last Name</label>
        <input asp-for="LastName" class="input" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="block">
        <label>Phone</label>
        <input asp-for="PhoneNumber" class="input" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="block">
        <label>Email</label>
        <input asp-for="Email" class="input" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="block">
        <button type="submit" class="button">Sign up</button>
        <a asp-controller="Auth" asp-action="Login">Login</a>
    </div>
</form>
