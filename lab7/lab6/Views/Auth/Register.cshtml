@model RegisterViewModel

<head>
    <style>
        .input {
            font-size: 16px;
            font-family: Arial;
            background-color: #fff;
            width: 100%;
        }

        .header {
            font-family: Arial;
            color: #332600;
            font-size: 30px;
            text-align: center;
        }

        .button {
            font-size: 16px;
            background-color: #a191bd;
            border-radius: 4px;
            color: #332600;
            font-family: Arial;
            width: 100%;
        }

        .block {
            margin-top: 10px;
            margin-left: 300px;
            margin-right: 300px;
        }

        .switch-button {
            margin-top: 8px;
            font-size: 8px;
            border-radius: 4px;
            color: #332600;
            font-family: Arial;
            display: inline-block;
            text-align: center;
            width: 100%;
        }
    </style>
</head>

<form asp-controller="Auth" asp-action="Register" method="post">
    <div class="header">Sign Up</div>
    <div class="block">
        <label>Username</label>
        <input asp-for="Username" class="input" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="block">
        <label>Password</label>
        <input asp-for="Password" class="input" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="block">
        <label>Confirm password</label>
        <input asp-for="ConfirmPassword" class="input" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="block">
        <label>First Name</label>
        <input asp-for="FirstName" class="input" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="block">
        <label>Last Name</label>
        <input asp-for="LastName" class="input" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="block">
        <label>Phone</label>
        <input asp-for="PhoneNumber" class="input" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="block">
        <label>Email</label>
        <input asp-for="Email" class="input" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="block">
        <button type="submit" class="button">Sign up</button>
        <a asp-controller="Auth" asp-action="Login">Login</a>
    </div>
</form>
